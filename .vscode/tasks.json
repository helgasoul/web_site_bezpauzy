{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Start Dev Server",
      "type": "shell",
      "command": "npm run dev",
      "problemMatcher": [],
      "presentation": {
        "reveal": "always",
        "panel": "new",
        "focus": true
      },
      "runOptions": {
        "runOn": "default"
      },
      "isBackground": true,
      "problemMatcher": {
        "pattern": {
          "regexp": "^",
          "file": 1,
          "location": 2,
          "message": 3
        },
        "background": {
          "activeOnStart": true,
          "beginsPattern": ".*",
          "endsPattern": ".*Local:.*"
        }
      }
    },
    {
      "label": "Stop Dev Server",
      "type": "shell",
      "command": "kill $(lsof -ti:3000) || true",
      "problemMatcher": []
    }
  ]
}
